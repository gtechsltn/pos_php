@model PosSustemUIU.ViewModels.ProductVM

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Add New Product</h4>
            </div>
            <form asp-action="Create"  method="POST" enctype="multipart/form-data">
                <div class="card-body">
                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Barcode" class="control-label"></label>
                                <input asp-for="Barcode" class="form-control" />
                                <span asp-validation-for="Barcode" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="Code" class="control-label"></label>
                                <input asp-for="Code" class="form-control" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Image" class="control-label"></label>
                                <input asp-for="Image" class="form-control" type="file"/>
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ExpireDate" class="control-label">ExpireDate<span class="text-danger">*</span></label>
                                <input asp-for="ExpireDate" type="text" class="form-control" id="datepicker-autoclose" placeholder="mm/dd/yyyy">
                                <span asp-validation-for="ExpireDate" class="text-danger"></span>
                            </div>
                             <div class="form-group">
                                <label asp-for="Meta" class="control-label"></label>
                                <input asp-for="Meta" class="form-control" />
                                <span asp-validation-for="Meta" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Vat" class="control-label"></label>
                                <input asp-for="Vat" class="form-control" />
                                <span asp-validation-for="Vat" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Discount" class="control-label"></label>
                                <input asp-for="Discount" class="form-control" />
                                <span asp-validation-for="Discount" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProductCategoryID" class="control-label" style="margin-bottom: 3px;"></label>
                                <select asp-for="ProductCategoryID" class="select2 form-control custom-select" style="width: 100%;">
                                            <option selected disabled>Select Product Category</option>
                                            @foreach (var category in Model.Categories)
                                            {
                                                <option value="@category.Id">@category.Name</option>
                                                
                                            }
                                        </select>
                                <span asp-validation-for="ProductCategoryID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SupplierId" class="control-label" style="margin-bottom: 3px;"></label>
                                <select asp-for="SupplierId" class="select2 form-control custom-select" style="width: 100%;">
                                            <option selected disabled>Select Product Supplier</option>
                                            @foreach (var supplier in Model.Suppliers)
                                            {
                                                <option value="@supplier.Id">@supplier.Name</option>
                                                
                                            }
                                        </select>
                                <span asp-validation-for="SupplierId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BrandId" class="control-label" style="margin-bottom: 3px;"></label>
                                <select asp-for="BrandId" class="select2 form-control custom-select" style="width: 100%;">
                                            <option selected disabled>Select Product Brand</option>
                                            @foreach (var brand in Model.Brands)
                                            {
                                                <option value="@brand.Id">@brand.Name</option>
                                                
                                            }
                                        </select>
                                <span asp-validation-for="BrandId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProductGroupID" class="control-label" style="margin-bottom: 3px;"></label>
                                <select asp-for="ProductGroupID" class="select2 form-control custom-select" style="width: 100%;">
                                            <option selected disabled>Select Product Group</option>
                                            @foreach (var productGroup in Model.ProductGroups)
                                            {
                                                <option value="@productGroup.Id">@productGroup.Name</option>
                                                
                                            }
                                        </select>
                                <span asp-validation-for="ProductGroupID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="UnitId" class="control-label" style="margin-bottom: 3px;"></label>
                                <select asp-for="UnitId" class="select2 form-control custom-select" style="width: 100%;">
                                            <option selected disabled>Select Unit Type</option>
                                            @foreach (var unitType in Model.UnitTypes)
                                            {
                                                <option value="@unitType.Id">@unitType.Name</option>
                                                
                                            }
                                        </select>
                                <span asp-validation-for="UnitId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-sm-12">
                             <div class="form-group">
                                <label asp-for="KeyWord" class="control-label"></label>
                                <input asp-for="KeyWord" class="form-control" />
                                <span asp-validation-for="KeyWord" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control" rows="9"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-sm-12">
                           
                            <div class="custom-control custom-checkbox mr-sm-2">
                                <input asp-for="IsActive" type="checkbox" class="custom-control-input" id="customControlAutosizing1" checked>
                                <label class="custom-control-label" for="customControlAutosizing1">Active</label>
                            </div>
                       </div>
                        
                        <div class="col">
                            <div class="card-action">
                                <button type="submit" class="btn btn-primary float-right">Submit</button>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
           </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script>
    $(".select2").select2();

        jQuery('#datepicker-autoclose').datepicker({
            autoclose: true,
            todayHighlight: true
        });
    </script>
}
